  "scripts": {
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "docs": "npm run build:site && typedoc && npm run capsule",
    "capsule": "[ -e  docs/capsule.png ] && rm docs/capsule.png; svg2png docs/icon.svg --output=docs/capsule.png --width=2048 --height=1024",
    "build": "npx tsc",
    "build:docs": "npm run build && npm run docs",
    "build:site": "npx tsc -p tsconfig.docs.json"
  },
  "files": [
    "build/**/*",
    "README.md",
    "docs/icon.svg",
    "CHANGELOG.md",
    "LICENSE"

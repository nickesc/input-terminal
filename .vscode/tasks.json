{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve-docs",
            "type": "shell",
            "command": "npx",
            "args": ["-y", "http-server", "docs", "-p", "8080", "-o"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting up http-server",
                    "endsPattern": "^Available on:"
                }
            }
        }
    ]
}
